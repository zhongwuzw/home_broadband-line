  </window-style>

  <!-- MacStyle window style -->
  <window-style>
    <style-name>MacStyle</style-name>
    <style-theme>
      <theme-name>MacTheme</theme-name>
    </style-theme>
    <style-theme>
      <theme-name>MacGray</theme-name>
    </style-theme>
    <style-theme>
      <theme-name>MacGreenSteel</theme-name>
