<%
	def rcontext = _ctx.getRequestContext();
	def jsManager = rcontext.getJavascriptManager();	

	String quickSearchlink = uicomponent.event("QuickSearch");							 	
	String resetSearchlink = uicomponent.event("ClearSearch");
	def keyPressAct = "portalControl.UIPortalControl.onEnterPress(event, executeScript);";
	
	jsManager.require("SHARED/jquery", "\$").require("SHARED/portalControl", "portalControl")
				.addScripts("var executeScript = \$('#$uiform.id a.SimpleSearchIcon').attr('href');")
				.addScripts("\$('#$uiform.id .QuickSet').on('keypress', function(event) {$keyPressAct});");
%>
<div class="UISearch">	
	<div class="UIBarStyle">
		<div class="BarStyle2">
			<div class="LeftBar">
				<div class="RightBar">
					<div class="MiddleBar">
						<div class="UISearchForm">
							<%uiform.begin()%>
						      <div class="QuickSet">
								<div class="SearchTitle"><label for="searchTerm"><%=_ctx.appRes("UISearch.label.Search")%>:</label>
								    <label for="searchOption" style="display:none;"><%=_ctx.appRes("UISearch.label.Search")%>:</label>
                                    <label for="UIListUsers-userStatusFilter" style="display:none;"><%=_ctx.appRes("UISearch.label.Search")%>:</label>
								</div>
								<% 
									QuickSearchInputSet = uiform.getQuickSearchInputSet();
									for(field in QuickSearchInputSet.getChildren()) {
										uiform.renderField(field) 
									}	 
								%>
								<a class="SimpleSearchIcon" href="javascript:void(0);" onclick="$quickSearchlink" title="<%= _ctx.appRes("UISearch.label.QuickSearch") %>">
									<span></span>
								</a>
								<a class="ClearSearchIcon" href="javascript:void(0);" onclick="$resetSearchlink" title="<%= _ctx.appRes("UISearch.label.ClearSearch") %>">
									<span></span>
								</a>
							</div>
							<%uiform.end()%>	 
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>				
</div>

